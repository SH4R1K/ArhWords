@model WordCloud // Убедитесь, что вы указали правильное пространство имен для модели

@{
    ViewBag.Title = "Generate Word Cloud";
}

<h2>Generate Word Cloud</h2>

<form asp-action="GenerateImage" method="post">
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <input asp-for="Text" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="MaxWords">Max Words</label>
        <input asp-for="MaxWords" class="form-control" type="range" min="1" value="100" max="200" step="1" required />
    </div>
    <div class="form-group">
        <label asp-for="MinFontSize">Min Font Size</label>
        <input asp-for="MinFontSize" class="form-control" type="range" min="1" value="4" max="200" step="1" required />
    </div>
    <div class="form-group">
        <label asp-for="MaxFontSize">Max Font Size</label>
        <input asp-for="MaxFontSize" class="form-control" type="range" min="1" value="200" max="200" step="1" required />
    </div>
    <div class="form-group">
        <label asp-for="Theme">Theme</label>
        <select asp-for="Theme" class="form-control" required>
            <option value="">Select a theme</option>
            @foreach (var theme in ViewBag.Themes)
            {
                <option value="@theme.Value">@theme.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ColorMap">Color Map</label>
        <select asp-for="ColorMap" class="form-control" required>
            <option value="">Select a color map</option>
            @foreach (var colorMap in ViewBag.ColorMaps)
            {
                <option value="@colorMap.Value">@colorMap.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Generate</button>
</form>

@if (ViewBag.ImageDataUrl != null)
{
    <h3>Generated Image</h3>
    <img src="@ViewBag.ImageDataUrl" alt="Generated Word Cloud" />
}
else if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}